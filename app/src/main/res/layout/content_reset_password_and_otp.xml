<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="context"
            type="com.sagar.android.chatapp.ui.verify_otp_and_reset_password.ResetPasswordWithOtp" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.verify_otp_and_reset_password.ResetPasswordWithOtp"
        tools:showIn="@layout/activity_reset_password_and_otp">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextOtp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/open_sans"
            android:hint="OTP"
            android:inputType="number"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/textInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans"
            android:hint="New Password"
            android:inputType="textWebPassword"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/textInput"
            app:layout_constraintEnd_toEndOf="@+id/editTextOtp"
            app:layout_constraintStart_toStartOf="@+id/editTextOtp"
            app:layout_constraintTop_toBottomOf="@+id/editTextOtp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/open_sans_semibold"
            android:onClick="@{context::onClickSubmit}"
            android:text="Submit"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@id/editTextOtp"
            app:layout_constraintStart_toStartOf="@id/editTextOtp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>