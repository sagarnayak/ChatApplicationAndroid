<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="context"
            type="com.sagar.android.chatapp.ui.forgot_password.Forgotpassword" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.forgot_password.Forgotpassword"
        tools:showIn="@layout/activity_forgotpassword">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editTextEmailId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:hint="Email Id"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/textInput"
            android:fontFamily="@font/open_sans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/buttonAndTabs"
            android:text="Send Otp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/open_sans_semibold"
            android:onClick="@{context::onClickSendOtp}"
            app:layout_constraintEnd_toEndOf="@id/editTextEmailId"
            app:layout_constraintStart_toStartOf="@id/editTextEmailId"
            app:layout_constraintTop_toBottomOf="@id/editTextEmailId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewAlreadyHavOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/open_sans"
            android:onClick="@{context::onClickAlreadyHaveOtp}"
            android:focusable="true"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/paragraphText"
            android:padding="16dp"
            android:text="Already have an otp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>